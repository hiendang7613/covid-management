<div id="body">
    <a id="btn-back" href="/package/list">
        Quay lại
    </a>
    <div id="content" class="rounded">
        <div id="title" class="rounded">Chi tiết gói nhu yếu phẩm</div>
        <div id="package-name">
            <div >{{package.TenGoiNYP}}</div>
        </div>
        <div id="package-content">
            <div>Mức mua giới hạn: {{package.MucGioiHan}} lần</div>
            <div>Thời gian giới hạn: {{package.ThoiGianGioiHan}} ngày</div>
            <div id="total">Tổng tiền: đồng</div>
        </div>
        <div id="detail" class="rounded">
            {{#each details}}
                <div class="product">
                    <div class="img-set">
                        <img src="{{#if this.HinhAnh1}} {{this.HinhAnh1}} {{else}} https://picsum.photos/150/150 {{/if}}" alt="Hình ảnh sản phẩm">
                        <img src="{{#if this.HinhAnh2}} {{this.HinhAnh2}} {{else}} https://picsum.photos/151/151 {{/if}}" alt="Hình ảnh sản phẩm">
                        <img src="{{#if this.HinhAnh3}} {{this.HinhAnh3}} {{else}} https://picsum.photos/152/152 {{/if}}" alt="Hình ảnh sản phẩm">
                        <img src="{{#if this.HinhAnh4}} {{this.HinhAnh4}} {{else}} https://picsum.photos/153/153 {{/if}}" alt="Hình ảnh sản phẩm">
                    </div>
                    <div class="name-price padding-tb">
                        <div class="name">{{this.TenNYP}}</div>
                        <div class="price"> Giá: {{this.DonGia}} đồng/{{this.DonViDinhLuong}}</div>
                    </div>
                    <div class="level padding-tb">
                        <div>Số lượng tối thiểu: {{this.SoLuongToiThieu}} {{this.DonViDinhLuong}}</div>
                        <div>Số lượng tối đa: {{this.SoLuongToiDa}} {{this.DonViDinhLuong}}</div>
                    </div>
                    <div class="amount padding-tb">
                        <div>Số lượng</div>
                        <div class="alter">
                            <div id="minus-{{this.MaNYP}}" class="btn-change">-</div>
                            <div id="{{this.MaNYP}}" class="current-amount">{{this.SoLuong}}</div>
                            <div id="plus-{{this.MaNYP}}" class="btn-change">+</div>
                        </div>
                    </div>
                </div>
            {{/each}}   
        </div>
        <a id="buy" href="/order/list">
            <div>Đặt mua</div>
        </a>
    </div>
    
</div>