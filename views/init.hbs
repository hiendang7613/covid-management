<body class="text-center mx-auto w-25 h-100 my-auto" style="background-color: #F5F5F5;;margin-top: 10% !important;
    top: 100%;">
    <div class="card">
<form class="form-signin p-3" method="post" action="/auth/signin">
    <h1 class="h3 mb-3 font-weight-normal">
      Covid Management
    </h1>
    <h1 class="h3 mb-3 font-weight-normal">
      Tạo tài khoản quản trị
    </h1>
    <div class="mb-5"></div>
    <label for="inputEmail" class="sr-only">
      Tài khoản
    </label>
    <input
      id="inputEmail"
      name="email"
      class="form-control"
      placeholder="Email address"
      required=""
      autofocus=""
    />
    <div class="mb-3"></div>
    <label for="inputPassword" class="sr-only ">
      Mật khẩu
    </label>
    <input
      type="password"
      name="password"
      id="inputPassword"
      class="form-control "
      placeholder="Password"
      required=""
    />
    
    <div class="checkbox mb-3"></div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
      Tạo
    </button>
    {{#if msg}}
      <p>
        {{msg}}
      </p>
    {{/if}}
  </form>
    </div>
  
</body>