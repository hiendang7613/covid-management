{{> navbar text='Tìm kiếm nhu yếu phẩm ... '}}

<div class="container-fluid">
  <div class="row">
    {{> sidebar where='product'}}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <div id="line-title">
        <h2 class="title">Danh sách nhu yếu phẩm</h2>
        <div class="btn-toolbar mb-2 mb-md-0 group-btn-action">
          <div class="btn-group mr-2">
            <button class="btn btn-primary" data-toggle="modal" data-target="#modal-insert">Thêm nhu yếu phẩm</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">
              Sắp xếp theo
            </button>
            <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end"
              style="position: absolute; transform: translate3d(-24px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
              <button class="dropdown-item sort-item" type="button" value="dgt">Đơn giá tăng</button>
              <button class="dropdown-item sort-item" type="button" value="dgg">Đơn giá giảm</button>
            </div>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table id="table-main" class="table table-striped table-sm">
          <thead>
            <tr>
              <th class="text-center" style="width: 10%"> STT </th>
              <th class="text-center" style="width: 25%">Tên</th>
              <th class="text-center" style="width: 10%">Đơn giá</th>
              <th class="text-center" style="width: 25%">Đơn vị định lượng</th>
              <th class="text-center" style="width: 15%"> Thao tác </th>
            </tr>
          </thead>
          <tbody>

            {{#each products}}
            <tr>
              <td class="item-id">{{MaNYP}}</td>
              <td>{{inc @index}}</td>
              <td>{{TenNYP}}</td>
              <td>{{DonGia}} VND</td>
              <td>{{DonViDinhLuong}}</td>
              <td>
                <button type="button" class="btn btn-primary btn-info">
                  Chi tiết</button>
              </td>
            </tr>
            {{/each}}
            
          </tbody>
        </table>
        {{> pagination }}
      </div>
    </main>
  </div>
</div>

{{> product/insertModal}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>